import React, { useState } from 'react';
import { View, Text, Button, Slider } from 'react-native';

const MindfulMinutesApp = () => {
  const [type, setType] = useState(null);
  const [duration, setDuration] = useState(10);

  return (
    <View style={{ padding: 20 }}>
      <Text>Select Meditation Type</Text>
      <Button title="Focus" onPress={() => setType('Focus')} />
      <Button title="Sleep" onPress={() => setType('Sleep')} />
      <Button title="Relax" onPress={() => setType('Relax')} />

      <Text>Duration: {duration} min</Text>
      <Slider minimumValue={5} maximumValue={30} step={5} value={duration} onValueChange={setDuration} />

      <Button title="Start Session" onPress={() => console.log(`Starting ${type} for ${duration} minutes`)} />
    </View>
  );
};

export default MindfulMinutesApp;
